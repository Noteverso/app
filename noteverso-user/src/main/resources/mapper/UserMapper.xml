<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.noteverso.user.dao.UserMapper">
    <select id="findUserByUsername" resultType="com.noteverso.user.model.User">
        SELECT * from noteverso_user
        WHERE username = #{username} AND is_deleted = false
    </select>
    <select id="findUserByEmail" resultType="com.noteverso.user.model.User">
        SELECT * from noteverso_user
        WHERE email = #{email} AND is_deleted = false
    </select>
</mapper>